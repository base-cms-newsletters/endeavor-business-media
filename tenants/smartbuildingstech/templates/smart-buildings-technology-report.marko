$ const { newsletter, date } = data;

$ const mainTableStyle ="border-collapse:collapse; font: 400 13px/21px Garamond, serif; margin: 0; border-bottom: 2px solid #d7d7d7; border-top: 2px solid #d7d7d7; background-color: #ffffff; mso-table-lspace: 0pt; mso-table-rspace: 0pt;";
$ const contentLinkStyle = {
  "font": "bold 19.5px/20px Arial, 'Helvetica Neue', Helvetica, sans-serif",
  "color": "#00944d",
};
$ const buttonStyle = "font: 400 13px/21px Garamond, serif; border-spacing: 0; padding: 10px 15px; table-layout: fixed; background-color: #00944d;";
$ const buttonTextStyle = {
  "color": "#ffffff",
  "font": "700 14px/21px Helvetica, Arial, sans-serif",
  "text-decoration": "none",
  "text-transform": "uppercase"
};
$ const footerStyle = "background-color: #00944d; text-decoration: none !important;";
$ const featuredMainTableStyle = "border: 10px solid #ecedee;";
$ const featuredButtonStyle = "font: 400 13px/21px Garamond, serif; border-spacing: 0; padding: 10px 15px; table-layout: fixed; background-color: #ffffff;";
$ const featuredButtonTextStyle = {
  "color": "#333333",
  "font": "700 14px/21px Helvetica, Arial, sans-serif",
  "text-decoration": "none !important",
  "text-transform": "uppercase"
};

<marko-newsletter-root
  title=newsletter.name
  description=newsletter.description
  date=date
>
  <@head>
    <common-style-b-styles />
  </@head>
  <@body style="margin: 0px !important; padding: 0 !important; mso-line-height-rule: exactly; background-color: #efefef;">
    <common-table width="740" style="border-collapse:collapse; background-color: #fff;" align="center" class="main" padding=0 spacing=0>
      <tr>
        <td>
          <common-banner-element
            name=newsletter.name
            date=date
            teaser=newsletter.teaser
          />

          <common-style-b-image-only-header-block date=date newsletter=newsletter />

          <common-section-spacer-element />

          <!-- content wrapper -->
          <common-table width="700" style="border-collapse:collapse;" align="center" class="main" padding=0 spacing=0>

            <!-- scheduled content 1-3 -->
            <common-table width="700" style="border-collapse:collapse;" align="center" class="main" padding=0 spacing=0>
              <tr>
                <td align="left" width="380">
                  <!-- #01 - Product Article - Big Image - 1 Column -->
                  <common-style-b-left-product-section-wrapper
                    section-id=82603
                    date=date
                    limit=1
                    newsletter=newsletter
                    content-link-style=contentLinkStyle
                  />
                  <!-- Number order is a bit wonky in this section because the brand requested that all ad sections be numbered with even numbers>
                  <!-- #03 - Featured Articles - No image - 1 Column -->
                  <common-style-a-title-teaser-block
                    section-id=82605
                    date=date
                    skip=1
                    newsletter=newsletter
                    main-table-style=mainTableStyle
                    content-link-style=contentLinkStyle
                    width="380"
                  />
                </td>
                <td width="320" align="right">
                  <!-- #02 - Skyscraper Ad - 1 Column -->
                  <common-promotion-advertisement-element
                    section-id=82604
                    date=date
                    limit=1
                    newsletter=newsletter
                  />
                </td>
              </tr>
            </common-table>

            <!-- #04 - Text/Promo - 1 Column -->
            <common-style-b-text-promo-wrapper
              section-id=82606
              date=date
              limit=1
              newsletter=newsletter
              main-table-style=featuredMainTableStyle
              content-link-style=contentLinkStyle
              button-style=featuredButtonStyle
              button-text-style=featuredButtonTextStyle
            />

            <!-- scheduled content 5 and 6 -->
            <common-table width="700" style="border-collapse:collapse;" align="center" class="main" padding=0 spacing=0>
              <tr>
                <td align="left" width="380">
                  <!-- #05 - Product Article - Big Image - 1 Column -->
                  <common-style-b-left-product-section-wrapper
                    section-id=82607
                    date=date
                    limit=1
                    newsletter=newsletter
                    content-link-style=contentLinkStyle
                  />
                </td>
                <td align="right" width="320">
                  <!-- #06 - 300 x 250 ad - 1 Column -->
                  <common-promotion-advertisement-element
                    section-id=82608
                    date=date
                    limit=1
                    newsletter=newsletter
                  />
                </td>
              </tr>
            </common-table>

            <!-- scheduled content 7 and 8 -->
            <common-table width="700" style="border-collapse:collapse;" align="center" class="main" padding=0 spacing=0>
              <tr>
                <td align="left" width="380">
                  <!-- #07 - Product Article - Big Image - 1 Column -->
                  <common-style-b-left-product-section-wrapper
                    section-id=82609
                    date=date
                    limit=1
                    newsletter=newsletter
                    content-link-style=contentLinkStyle
                  />
                </td>
                <td align="right" width="300" >
                  <!-- #08 - 300 x 250 ad - 1 Column -->
                  <common-promotion-advertisement-element
                    section-id=82610
                    date=date
                    limit=1
                    newsletter=newsletter
                  />
                </td>
              </tr>
            </common-table>

          </common-table>
          <!-- end of content wrapper-->

          <common-section-spacer-element />

          <common-style-b-footer-nav-block newsletter=newsletter/>

          <common-style-b-opt-out-block newsletter=newsletter />

        </td>
      </tr>
    </common-table>
  </@body>
</marko-newsletter-root>
